rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para Perfis de Usuário
    // Um usuário só pode ler e escrever seu próprio documento de perfil.
    match /user_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para Treinos
    // Um usuário só pode ler e criar treinos associados ao seu próprio UID.
    match /workouts/{workoutId} {
      // Permite que qualquer usuário autenticado crie um treino,
      // desde que o 'userId' no documento seja o seu próprio.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Permite que um usuário leia ou apague um treino apenas se ele for o "dono".
      allow read, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}